<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_custom"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/titlebar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="6dp"
            android:background="@mipmap/titlebar2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="广场"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#5bbffd"
                android:id="@+id/toolbar_ground"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="关注"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="#fff"
                android:id="@+id/toolbar_attention"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a08f90"
                android:layout_marginBottom="5dp"
                ></View>
            <TextView
                android:text="朋友圈"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/pengyouquan"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a08f90"
                android:layout_marginBottom="5dp"
                ></View>
            <TextView
                android:text="订单"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@drawable/dingdan"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a08f90"
                android:layout_marginBottom="5dp"
                ></View>
            <TextView
                android:text="关注"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:layout_height="0dp"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/guanzhu"
                android:layout_marginBottom="5dp"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#a08f90"
                android:layout_marginBottom="5dp"
                ></View>
            <TextView
                android:text="我的"
                android:layout_width="match_parent"
                android:layout_gravity="bottom"
                android:drawableTop="@drawable/wo"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:drawablePadding="5dp"
                android:layout_weight="1"
                android:gravity="bottom|center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

